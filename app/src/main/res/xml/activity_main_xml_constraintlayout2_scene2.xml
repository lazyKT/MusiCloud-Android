<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/fullMusicPlayer"
               motion:framePosition="0"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fullMusicPlayer"
               motion:framePosition="100"
               android:alpha="1" />
           <KeyAttribute
               motion:motionTarget="@+id/fullMusicPlayer"
               motion:framePosition="30"
               android:scaleY="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/fullMusicPlayer"
               motion:framePosition="100"
               android:scaleY="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/miniPlayer"
               motion:framePosition="70"
               android:alpha="0.5" />
           <KeyAttribute
               motion:motionTarget="@+id/miniPlayer"
               motion:framePosition="100"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/fullMusicPlayer"
               motion:framePosition="100"
               android:scaleX="1.2" />
           <KeyAttribute
               motion:motionTarget="@+id/collapseFullPlayer"
               motion:framePosition="100"
               android:alpha="1" />
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/miniPlayer"
            motion:touchAnchorSide="bottom" />
        <OnClick motion:targetId="@+id/miniPlayer" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/fullMusicPlayer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp" />
        <Constraint
            android:id="@+id/miniPlayer"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintBottom_toTopOf="@id/fullMusicPlayer"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/collapseFullPlayer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toTopOf="@id/fullMusicPlayer"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>